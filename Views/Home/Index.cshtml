@model PangoCalculator.ApiControllers.CalculateRequest;
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {

        $('#submitButton').click(function () {
            var operation = $('#Operation :selected').text();
            var argument1 = $('#Argument1').val();
            var argument2 = $('#Argument2').val();
            $.ajax({
                type: 'GET',
                url: '/api/calculator?argument1=' + argument1 + '&argument2=' + argument2 + '&operation=' + operation + '',
                success: function (response) {
                    $('#Result').html(response.result);
                },
                error: function (req, status, error) {
                    alert(error);
                }
            });
        });
    });
</script>

<div class="form-group">
    <div class="row">
        <label asp-for="Argument1" class="col-lg-2"></label>
        <input type="number" asp-for="Argument1" class="col-lg-2" />
    </div>
    <div class="row">
        <label asp-for="Operation" class="col-lg-2"></label>
        <select asp-for="Operation" class="col-lg-2" asp-items="Html.GetEnumSelectList<PangoCalculator.ApiControllers.Operation>()">
            <option selected="selected" value="">Select</option>
        </select>
    </div>
    <div class="row">
        <label asp-for="Argument2" class="col-lg-2"></label>
        <input type="number" asp-for="Argument2" class="col-lg-2" />
    </div>
    <div class="row">
        <label class="col-lg-2">Result</label>
        <label id="Result"></label>
    </div>
    <div class="row">
        <input type="submit" value="Submit" id="submitButton" />
    </div>
</div>
